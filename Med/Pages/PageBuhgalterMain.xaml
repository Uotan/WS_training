<Page x:Class="Med.Pages.PageBuhgalterMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Med.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1300"
      MinHeight="680"
      MinWidth="1300"
      Title="PageBuhgalterMain">

    <Grid>
        <UniformGrid Columns="2">
            <Button x:Name="BtnViewReports" Width="250" Height="100" FontSize="20" Style="{StaticResource forButt}">Просмотр отчетов</Button>
            <Button x:Name="BtnDoSchetSK" Width="250" Height="100" FontSize="20" Style="{StaticResource forButt}" >
                <Button.Content>
                    <TextBlock Text="Сформировать счета страховой компании" TextWrapping="Wrap"/>
                </Button.Content>
            </Button>
        </UniformGrid>
    </Grid>
</Page>
