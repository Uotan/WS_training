<Window x:Class="Med.Windows.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Med.Windows"
        mc:Ignorable="d"
        Title="CaptchaWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="---------" 
               Grid.Row="0" 
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="40"
               FontWeight="Bold"/>
        <Label Name="captchaLabel" 
               Grid.Row="0" 
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="40"/>
        <TextBox x:Name="captchaTextBox"
                 Margin="140,40"
                 Grid.Row="1"
                 FontSize="26" 
                 Background="{StaticResource attenColor}"
                 Foreground="#FFFFFF" TextChanged="captchaTextBox_TextChanged"
                 />
    </Grid>
</Window>
